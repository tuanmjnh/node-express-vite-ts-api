{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmitOnError": false,
    "sourceMap": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*",
    "interfaces/**/*"
  ]
}